// Debug Configuration for Meeshy iOS
// Use this for development and testing

// App Information
PRODUCT_NAME = Meeshy Dev
PRODUCT_BUNDLE_IDENTIFIER = me.meeshy.app.dev
MARKETING_VERSION = 1.0.0
CURRENT_PROJECT_VERSION = 1

// API Configuration - Development servers
API_BASE_URL = http://localhost:3000
WEBSOCKET_URL = ws://localhost:3000
API_TIMEOUT = 30

// Feature Flags
ENABLE_LOGGING = YES
ENABLE_DEBUG_MENU = YES
ENABLE_ANALYTICS = NO
ENABLE_CRASH_REPORTING = NO
ENABLE_PERFORMANCE_MONITORING = YES

// Build Settings
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG
GCC_PREPROCESSOR_DEFINITIONS = DEBUG=1
SWIFT_OPTIMIZATION_LEVEL = -Onone
ENABLE_TESTABILITY = YES
VALIDATE_PRODUCT = NO
COPY_PHASE_STRIP = NO
DEBUG_INFORMATION_FORMAT = dwarf

// Code Signing
CODE_SIGN_STYLE = Automatic
DEVELOPMENT_TEAM = D72UK7R5RE
CODE_SIGN_IDENTITY = Apple Development

// Deployment
IPHONEOS_DEPLOYMENT_TARGET = 16.0
TARGETED_DEVICE_FAMILY = 1,2
SUPPORTS_MACCATALYST = NO

// Swift Settings
SWIFT_VERSION = 5.9
ENABLE_BITCODE = NO
SWIFT_COMPILATION_MODE = singlefile

// Compiler Settings
GCC_OPTIMIZATION_LEVEL = 0
ONLY_ACTIVE_ARCH = YES
ENABLE_NS_ASSERTIONS = YES

// Warnings (less strict in debug)
SWIFT_TREAT_WARNINGS_AS_ERRORS = NO
GCC_TREAT_WARNINGS_AS_ERRORS = NO

// Asset Catalog
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon
ASSETCATALOG_COMPILER_GLOBAL_ACCENT_COLOR_NAME = AccentColor

// Security - Relaxed for development ONLY
ENABLE_HARDENED_RUNTIME = NO

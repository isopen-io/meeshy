{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": ".",
  "testMatch": [
    "<rootDir>/src/**/__tests__/**/*.test.ts",
    "<rootDir>/src/**/*.test.ts"
  ],
  "collectCoverageFrom": [
    "src/services/**/*.ts",
    "src/utils/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/__tests__/**",
    "!src/main.ts",
    "!src/server.ts",
    "!src/routes/**/*",
    "!src/middleware/**/*",
    "!src/websocket/**/*",
    "!src/grpc/**/*"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}

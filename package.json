{
  "name": "meeshy",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@meeshy/web",
    "dev:gateway": "turbo run dev --filter=@meeshy/gateway",
    "dev:translator": "turbo run dev --filter=@meeshy/translator",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@meeshy/web",
    "build:gateway": "turbo run build --filter=@meeshy/gateway",
    "build:translator": "turbo run build --filter=@meeshy/translator",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:web": "turbo run test --filter=@meeshy/web",
    "test:gateway": "turbo run test --filter=@meeshy/gateway",
    "test:translator": "turbo run test --filter=@meeshy/translator",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "docker:build": "docker-compose -f docker-compose.yml build",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-compose.yml down",
    "docker:logs": "docker-compose -f docker-compose.yml logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "prepare": "turbo run prepare",
    "postinstall": "turbo run generate --filter=@meeshy/shared",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:auto": "node scripts/auto-changeset.js",
    "changeset:auto:dry": "node scripts/auto-changeset.js --dry-run",
    "version": "changeset version && node scripts/sync-versions.js",
    "version:check": "changeset status",
    "sync-versions": "node scripts/sync-versions.js",
    "release:local": "pnpm version && git add -A && git commit -m 'chore: version packages' || true",
    "fix:notification-dates": "tsx scripts/migrations/fix-notification-dates.ts",
    "fix:notification-context-null": "tsx scripts/migrations/fix-notification-context-null.ts",
    "test:notification-serialization": "tsx scripts/test-notification-serialization.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@playwright/test": "^1.58.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "onnxruntime-node",
        "sharp",
        "@tensorflow/tfjs-node",
        "@xenova/transformers"
      ]
    }
  }
}

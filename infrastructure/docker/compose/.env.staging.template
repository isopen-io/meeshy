# =============================================================================
# MEESHY STAGING - Variables d'environnement
# =============================================================================
# Copier ce fichier vers .env.staging et remplir les valeurs
# ATTENTION: Ne jamais committer .env.staging avec des vraies valeurs !
# =============================================================================

# -----------------------------------------------------------------------------
# DOMAINE
# -----------------------------------------------------------------------------
DOMAIN=meeshy.me

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_TYPE=MONGODB
DATABASE_IMAGE=mongo:8.0
MONGODB_DATABASE=meeshy
MONGODB_USER=meeshy
MONGODB_PASSWORD=***CHANGE_ME_STAGING***

# -----------------------------------------------------------------------------
# IMAGES DOCKER
# -----------------------------------------------------------------------------
GATEWAY_IMAGE=isopen/meeshy-gateway:latest
TRANSLATOR_IMAGE=isopen/meeshy-translator:latest
FRONTEND_IMAGE=isopen/meeshy-frontend:latest

# -----------------------------------------------------------------------------
# SSL/TLS
# -----------------------------------------------------------------------------
CERTBOT_EMAIL=admin@meeshy.me

# -----------------------------------------------------------------------------
# AUTHENTIFICATION INTERFACES WEB (Basic Auth)
# -----------------------------------------------------------------------------
# Générer avec: htpasswd -nb admin password
# Ou: docker run --rm httpd:alpine htpasswd -nb admin password
TRAEFIK_USERS=admin:$$apr1$$...***CHANGE_ME***
MONGO_USERS=admin:$$apr1$$...***CHANGE_ME***
REDIS_USERS=admin:$$apr1$$...***CHANGE_ME***
API_USERS=admin:$$apr1$$...***CHANGE_ME***

# -----------------------------------------------------------------------------
# JWT
# -----------------------------------------------------------------------------
# Générer avec: openssl rand -base64 32
JWT_SECRET=***CHANGE_ME_STAGING_JWT_SECRET***
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# UTILISATEURS INITIAUX
# -----------------------------------------------------------------------------
FORCE_DB_RESET=false

# Admin
ADMIN_PASSWORD=***CHANGE_ME***
ADMIN_EMAIL=admin@staging.meeshy.me
ADMIN_SYSTEM_LANGUAGE=en
ADMIN_REGIONAL_LANGUAGE=fr
ADMIN_CUSTOM_DESTINATION_LANGUAGE=

# Meeshy
MEESHY_PASSWORD=***CHANGE_ME***
MEESHY_EMAIL=meeshy@staging.meeshy.me
MEESHY_SYSTEM_LANGUAGE=en
MEESHY_REGIONAL_LANGUAGE=fr
MEESHY_CUSTOM_DESTINATION_LANGUAGE=

# Atabeth
ATABETH_PASSWORD=***CHANGE_ME***
ATABETH_EMAIL=atabeth@staging.meeshy.me
ATABETH_USERNAME=atabeth
ATABETH_FIRST_NAME=Atabeth
ATABETH_LAST_NAME=User
ATABETH_ROLE=user
ATABETH_SYSTEM_LANGUAGE=en
ATABETH_REGIONAL_LANGUAGE=fr
ATABETH_CUSTOM_DESTINATION_LANGUAGE=

# -----------------------------------------------------------------------------
# SESSIONS
# -----------------------------------------------------------------------------
SESSION_EXPIRY_MOBILE_DAYS=365
SESSION_EXPIRY_DESKTOP_DAYS=30
SESSION_EXPIRY_TRUSTED_DAYS=365
MAX_SESSIONS_PER_USER=10

# -----------------------------------------------------------------------------
# FRONTEND
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DISABLE_CLIENT_TRANSLATION=true
NEXT_PUBLIC_USE_API_TRANSLATION_ONLY=true
NEXT_PUBLIC_DEBUG_LOGS=false

# -----------------------------------------------------------------------------
# TTS/ML
# -----------------------------------------------------------------------------
ENABLE_DIARIZATION=true
TTS_MAX_NEW_TOKENS=2048
TTS_MAX_SEGMENT_CHARS=1000
TTS_MIN_SEGMENT_CHARS=50

# -----------------------------------------------------------------------------
# BRANDING (optionnel)
# -----------------------------------------------------------------------------
BRAND_LOGO_URL=

# =============================================================================
# NOTE: Après modification, déployer avec:
#   ./infrastructure/scripts/deploy-staging.sh
# =============================================================================
